@model CustomerEditViewModel

@using System.Security.Claims;

@{
    Layout = "_Sidebar.cshtml";
    ViewData["Title"] = "Мои данные";
}


<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Firstname" class="control-label">Имя*</label>
        <input asp-for="Firstname" class="form-control" value="@Model.Firstname" />
        <span asp-validation-for="Firstname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Surname" class="control-label">Фамилия*</label>
        <input asp-for="Surname" class="form-control" value="@Model.Surname" />
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Patronymic" class="control-label">Отчество</label>
        <input asp-for="Patronymic" class="form-control" value="@Model.Patronymic" />
        <span asp-validation-for="Patronymic" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Gender" class="control-label">Пол</label>

        <div class="form-check">
            @if (Model.Gender == "м")
            {
                <input class="form-check-input" type="radio" asp-for="Gender" id="male" value="м" checked>
            }
            else
            {
                <input class="form-check-input" type="radio" asp-for="Gender" id="male" value="м">
            }
            <label class="form-check-label" for="male">м</label>
        </div>
        <div class="form-check">
            @if (Model.Gender == "ж")
            {
                <input class="form-check-input" type="radio" asp-for="Gender" id="female" value="ж">
            }
            else
            {
                <input class="form-check-input" type="radio" asp-for="Gender" id="female" value="ж">
            }

            <label class="form-check-label" for="female">ж</label>
        </div>

        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Dob" class="control-label">Дата Рождения</label>
        <input asp-for="Dob" class="form-control" type="date" value="@Model.Dob"/>
        <span asp-validation-for="Dob" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address" class="control-label">Адрес</label>
        <input asp-for="Address" class="form-control" value="@Model.Address" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Эл.почта*</label>
        <input asp-for="Email" class="form-control" value="@Model.Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Phone" class="control-label">Телефон*</label>
        <input asp-for="Phone" class="form-control" value="@Model.Phone" type="tel"/>
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
    </div>
    <a asp-action="Delete">Удалить аккаунт</a>
</form>




