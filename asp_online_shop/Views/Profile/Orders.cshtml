@model List<Order>
@using System.Security.Claims;

@{
    Layout = "_Sidebar.cshtml";
    ViewData["Title"] = "Заказы";
}
@if (Model.Count == 0)
{
    <div class="empty-order-list align-self-center">Заказов нет</div>
}
else
{
    @foreach (var order in Model)
    {
        <div class="card order">
            <div class="card-header">
                @order.OrderItems[0].Product.Name
            </div>
            <div class="card-body">
                <h5 class="product-name card-title">@order.OrderItems[0].Price</h5>
                <h6 class="product-price card-subtitle mb-2 text-muted">@order.OrderStatus</h6>
            </div>
        </div>
    }
}

