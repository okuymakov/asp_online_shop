@model OrderViewModel;
@using System.Security.Claims;

@{
    ViewData["Title"] = "Оформление заказа";
}
<h1>Оформление заказа</h1>
<div class="modal-body">
    <form id="order-form" asp-controller="order" asp-action="index">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>       
        <div class="form-group">
            <label asp-for="UserName" class="control-label">Имя*</label>
            <input asp-for="UserName" class="form-control" value="@User.FindFirstValue("Firstname")" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="UserSurname" class="control-label">Фамилия*</label>
            <input asp-for="UserSurname" class="form-control" value="@User.FindFirstValue("Surname")" />
            <span asp-validation-for="UserSurname" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="UserPatronymic" class="control-label">Отчество</label>
            <input asp-for="UserPatronymic" class="form-control" value="@User.FindFirstValue("Patronymic")" />
            <span asp-validation-for="UserPatronymic" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="UserPhone" class="control-label">Телефон*</label>
            <input asp-for="UserPhone" class="form-control" value="@User.FindFirstValue("Phone")" readonly />
            <span asp-validation-for="UserPhone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="UserEmail" class="control-label">Эл.почта*</label>
            <input asp-for="UserEmail" class="form-control" value="@User.FindFirstValue(ClaimTypes.Name)" readonly />
            <span asp-validation-for="UserEmail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address" class="control-label">Адрес*</label>
            <input asp-for="Address" class="form-control" value="@User.FindFirstValue("Address")" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PaymentMethod" class="control-label">Способ оплаты*</label>
            <select asp-for="PaymentMethod" class="form-control" asp-items="Html.GetEnumSelectList<PaymentMethod>()"></select>
            <span asp-validation-for="PaymentMethod" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DeliveryMethod" class="control-label">Способ доставки*</label>
            <select asp-for="DeliveryMethod" class="form-control" asp-items="Html.GetEnumSelectList<DeliveryMethod>()"></select>
            <span asp-validation-for="DeliveryMethod" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Вернуться</button>
            <input type="submit" class="btn btn-primary create-order" value="Оформить заказ" />
        </div>
    </form>
</div>

